# .zshrc

autoload -Uz colors
colors

# environment variable

export LANG="ja_JP.UTF-8"
export CLICOLOR=1

# prompt

#PROMPT="%(?.%{${fg[green]}%}.%{${fg[red]}%})[%n@%m]%{${reset_color}%} %# "
PROMPT="%(?.%{${fg[cyan]}%}.%{${fg[red]}%})[%n@%m]%{${reset_color}%} %# "

# alias

alias la='ls -a'
alias ll='ls -l'

alias rm='rm -i'
alias cp='cp -i'
alias mv='mv -i'

# hook functions

chpwd() {
  if [[ $(pwd) != $HOME ]]; then
  	ls
  fi
}
